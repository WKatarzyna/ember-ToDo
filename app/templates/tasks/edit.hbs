<form>
    <fieldset>
        <div class="form-group">
            <label for="title">Task Title</label>
          {{input type="text" class="form-control" id="title" value=model.title
                  placeholder="Add Task......."}}
        </div>
        <div class="form-group">
            <label for="dateInput">Due Date</label>
          {{input type="date" class="form-control" id="dateInput" placeholder="Insert date..." value= model.date}}
        </div>
        <div class="form-group">
            <label for="description">Description</label>
          {{textarea class="form-control" value=model.description placeholder="Describe Task.." id="description"
                     rows="3"}}
        </div>
        <button {{action 'editTask' model.id}} class="btn btn-primary">Submit</button>

    </fieldset>
</form>